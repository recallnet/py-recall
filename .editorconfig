# http://editorconfig.org/#file-format-details
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.json]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
